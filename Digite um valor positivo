import java.util.Scanner;
public class Main
{
    public static void main(String[] args){
        Scanner sc =new Scanner(System.in);
        System.out.println("Digite um valor positivo");
        int i = sc.nextInt();
        while(i > 0)
        {
            System.out.println("Digite um valor positivo");
        i = sc.nextInt();
        }
        
    }
}
